{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Git | PUSH → ~HEAD@Github/Gitee",
      "promptOnClose": true,
      "type": "shell",
      "command": "git push origin&&git push gitee",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Git | PUSH → master@Github/Gitee",
      "promptOnClose": true,
      "type": "shell",
      "command": "git push origin master&&git push gitee master",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Git | PULL → master@Gitee",
      "promptOnClose": true,
      "type": "shell",
      "command": "git pull gitee master",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Git | PULL → master@Github",
      "promptOnClose": true,
      "type": "shell",
      "command": "git pull github master",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "ENV | Install Jekyll Env (Linux)",
      "promptOnClose": true,
      "type": "shell",
      "command": "sudo apt install jekyll -y",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "ENV | Clean Jekyll Temp File (Linux)",
      "promptOnClose": true,
      "type": "shell",
      "command": "rm -rd ./_site ./.jekyll-cache",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "ENV | Uninstall Jekyll Env (Linux)",
      "promptOnClose": true,
      "type": "shell",
      "command": "sudo apt remove jekyll -y",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "DEV | Build Jekyll Pages",
      "promptOnClose": true,
      "type": "shell",
      "command": "bundle exec jekyll serve",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
  ]
}